<!-- Hero Section with Advanced Customization -->
{% schema %}
{
  "name": "Hero Section Rounded",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
  ],
  "blocks": [
    {
      "type": "info_block",
      "name": "Info Block",
      "settings": [
        { "type": "richtext", "id": "heading", "label": "Heading" },
        { "type": "richtext", "id": "subheading", "label": "Subheading" },
      ]
    },
    {
      "type": "button_block",
      "name": "Button Block",
      "settings": [
        { "type": "richtext", "id": "button_text", "label": "Button Text" },
        { "type": "image_picker", "id": "button_icon", "label": "Button Icon" },
        { "type": "color", "id": "button_bg_color", "label": "Button Background Color", "default": "#FFFFFF" },
            {
      "type": "url",
      "id": "link_url",
      "label": "Button Link URL"
    },
      ]
    },
    {
      "type": "card_block",
      "name": "Card Block",
      "settings": [
        { "type": "richtext", "id": "card_main_text", "label": "Card Main Text" },
        { "type": "richtext", "id": "card_info_text", "label": "Card Info Text" },
        { "type": "richtext", "id": "explore_button_text", "label": "Explore Button Text" },
        { "type": "image_picker", "id": "explore_icon", "label": "Explore Button Icon" },
            {
      "type": "url",
      "id": "link_url",
      "label": "Button Link URL"
    },
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section Rounded",
      "category": "Sections"
    }
  ]
}
{% endschema %}

<style>
  .section-{{ section.id }} {
    padding: 1rem;
    display: flex;
    justify-content: center;
  }
  
  .hero-main-container-{{ section.id }} {
    background: url("{{ section.settings.background_image | img_url: 'master' }}");
      width: 100%;
      height: 100dvh;
      background-size: cover;
      background-position: center;
      padding: 4rem;
      border-radius: 3rem;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      position: relative;
      overflow: hidden; /* Ensures children stay within the boundaries */
      max-width: 2000px;
  }
  

  .hero-content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .info-block-{{ section.id }} {
    color: var(--info-text-color, {{ section.settings.text_color }});
    font-size: var(--info-font-size, {{ section.settings.font_size }}rem);
    border-radius: var(--info-border-radius, {{section.settings.border_radius }}rem);
  }

  .button-block-{{ section.id }} {
    background-color: var(--button-bg-color, {{ section.settings.button_bg_color }});
    padding: var(--button-padding, {{ section.settings.padding }}rem);
    border-radius: var(--button-border-radius, {{ section.settings.border_radius }}rem);
  }

  .button-block-{{ section.id }} img {
    display: flex;
    padding: 8px 16px;
    height: 100%;
    background: transparent;
    border: none;
    color: white;
  }

  .card-block-container-{{ section.id }} {
    display: flex;
    background: rgba(255, 255, 255, 0);
    border-radius: 2rem;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(11.5px);
    -webkit-backdrop-filter: blur(11.5px);
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    margin-bottom: 2rem;
    width: -webkit-fill-available;
    align-items: center;
    padding: 1rem 1.25rem;
    min-width: 75%;
    justify-content: center;
  }
  .card-block-container-{{ section.id }} p {
        font-size 1rem;
  }

  .card-block-container-{{ section.id }} .info-wrapper {
    font-size: 2rem;
  }

  .icon-box-{{ section.id }} img {
    background: #0D67F7;
    padding: 0.4rem;
    border-radius: 0.4rem;
    width: 32px;
    display: flex;
    align-items: center;
  }

    .info-wrapper {
    display: flex;
    background: #0D67F7;
    border-radius: 1rem;
  }
    .button-title-box-{{ section.id }} {
    display: flex;
    padding: 8px 16px;
    height: 100%;
    background: transparent;
    border: none;
    color: white;
    align-items: center;
    gap: 16px;
  }

   .card-main {
    padding: 1rem 1.5rem;
    margin: 0;
    background: #323232;
    border-radius: 1rem;
    color: white;
    text-align: left;
  }
    .card-info-box {
    padding: 1rem 1.5rem;
    margin: 0;
    border-radius: 0 1rem 1rem 0;
    color: white;
    text-align: left;
  }
  @media screen and (max-width: 600px) {

  .card-block-container-{{ section.id }} {
    flex-direction: column;
    width: 95%;
  }
  .info-wrapper {
    flex-direction: column;
  }
  .hero-main-container-{{ section.id }} {
    align-items: flex-start;
    background-repeat: no-repeat;
    background-position: 72%;
  }
  .info-block-{{ section.id }} {
    margin-top: 2rem !important;
  }
    .
}

  .section-{{ section.id }} h1,
p, a {
  margin: 0;
  padding: 0;
  text-decoration: none;
}
@media screen and (max-width: 600px) {
  .section-{{ section.id }} h1 {
    font-size: 4rem !important;
    line-height: 5rem !important;
    color: white !important;
  }
  .section-{{ section.id }} p {
    line-height: 2rem !important;
    font-size: 1.5rem !important;
  }
}
.section-{{ section.id }} h1 {
  font-size: 10rem;
  line-height: 9rem;
  color: white;
}
.section-{{ section.id }} p {
  line-height: 2rem;
}
</style>
<div class="section-{{ section.id }}"> 
<div class="hero-main-container-{{ section.id }}">
  <div class="hero-content-wrapper">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'info_block' %}
          <div class="info-block-{{ section.id }}">
            {{ block.settings.heading }}
            {{ block.settings.subheading }}
          </div>
        {% when 'button_block' %}
          <button class="button-block-{{ section.id }}">
            {{ block.settings.button_text }}
            <div class="icon-button-block">
              {% if block.settings.button_icon %}
                <img src="{{ block.settings.button_icon | img_url: 'small' }}" alt="Button Icon">
              {% endif %}
            </div>
          </button>
        {% when 'card_block' %}
          <div class="card-block-container-{{ section.id }}">
            <div class="info-wrapper">
              <div class="card-main">
                {{ block.settings.card_main_text }}
              </div>
              <div class="card-info-box">
                {{ block.settings.card_info_text }}
              </div>
            </div>
            <a href="https://elastaboy.com/products/program-only-bundle" class="button-title-box-{{ section.id }}">
              {{ block.settings.explore_button_text }}
              <div class="icon-box-{{ section.id }}">
                {% if block.settings.explore_icon %}
                  <img src="{{ block.settings.explore_icon | img_url: 'small' }}" alt="Explore Icon">
                {% endif %}
              </div>
            </a>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>
</div>