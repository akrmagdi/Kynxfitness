    {{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Product Slider",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Flexible Programs To Suit Your Lifestyle"
    },
    {
      "type": "image_picker",
      "id": "top_left_image",
      "label": "Top Left Image"
    },
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
        {
          "type": "richtext",
          "id": "card_text",
          "label": "Card Text",
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Explore More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="main-section-{{ section.id }}">
  <div class="product-slider-section">
    <div class="header-slider">
      <img src="{{ section.settings.top_left_image | img_url: '150x150' }}" alt="Top Left Image">
      <h2>{{ section.settings.section_heading }}</h2>
    </div>
    
    <div class="custom-swiper-navigation">
      <button class="swiper-button-prev-{{ section.id }} custom-button">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 19L8 12L15 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <button class="swiper-button-next-{{ section.id }} custom-button">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 5L16 12L9 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>

    <!-- Unique Swiper Container ID -->
    <div id="product-slider-{{ section.id }}" class="swiper-container">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.type == 'product_card' %}
            {% assign product = all_products[block.settings.product] %}
            <div class="swiper-slide product-card">
              <div class="product-card-inner">
                <div class="product-info">
                  <h3 class="product-title">{{ product.title }}</h3>
                  <p>{{ block.settings.card_text }}</p>
                  <a href="{{ product.url }}" class="button">
                    <div class="button-content">
                      <span>{{ block.settings.button_text }}</span>
                      <div class="svg-box">
                        <svg width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                          <path fill-rule="evenodd" d="M10.293 1.5a.5.5 0 0 1 .707 0l5 5a.5.5 0 0 1 0 .707l-5 5a.5.5 0 0 1-.707-.707L14.793 7H1.5a.5.5 0 0 1 0-1h13.293L10.293 2.207a.5.5 0 0 1 0-.707z"/>
                        </svg>
                      </div>
                    </div>
                  </a>
                </div>
                <div class="product-image">
                  <img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.title }}" />
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="swiper-pagination"></div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  // Unique Swiper instance for this section
  const productSlider = new Swiper('#product-slider-{{ section.id }}', {
    loop: false,
    slidesPerView: 1,
    spaceBetween: 20,
    pagination: {
      el: "#product-slider-{{ section.id }} .swiper-pagination",
      type: "progressbar",
    },
    breakpoints: {
      640: { slidesPerView: 1 },
      768: { slidesPerView: 1 },
      1024: { slidesPerView: 2 }
    }
  });

  // Custom navigation button listeners for this specific instance
  document.querySelector('.swiper-button-prev-{{ section.id }}').addEventListener('click', () => productSlider.slidePrev());
  document.querySelector('.swiper-button-next-{{ section.id }}').addEventListener('click', () => productSlider.slideNext());
});
</script>

<style>
  .main-section-{{ section.id }} {
    display: flex;
    justify-content: center;
    padding: 2rem;
  }
  .product-slider-section {
    text-align: center;
    background-color: #333;
    color: white;
    padding: 20px;
    position: relative;
    max-width: 1600px;
    width: 100%;
    border-radius: 2rem;
    overflow: hidden;
  }

  .product-slider-section h2 {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  /* Custom navigation button styles */
  .custom-swiper-navigation {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    margin-bottom: 20px;
    position: relative;
    z-index: 2;
  }

  .custom-button {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 50%;
    cursor: pointer;
    border: none;
    outline: none;
  }

  .swiper-container {
    margin-top: 20px;
  }

  .product-card {
    background: white;
    color: black;
    border-radius: 16px;
    overflow: hidden;
    display: flex;
    height: auto;
  }

  .product-card-inner {
    display: flex;
    align-items: stretch;
    height: 100%;
    width: 100%;
  }

  .product-info {
    flex: 1;
    padding: 20px;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
  }

  .product-title {
    font-weight: bold;
    margin: 0;
    font-size: 18px;
    margin-bottom: 10px;
  }

  .product-image {
    flex: 1;
    border-radius: 0 16px 16px 0;
    overflow: hidden;
    display: flex;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .button {
    display: flex;
    align-items: center;
    color: #fff;
    background-color: #007bff;
    padding: 8px 16px;
    text-decoration: none;
    border-radius: 4px;
  }

  .button-content {
    display: flex;
    align-items: center;
  }

  .svg-box {
    margin-left: 10px;
    display: flex;
    align-items: center;
    background: black;
    padding: 0.5rem;
    border-radius: 0.5rem;
  }
ul {
  padding-left: 20px;
  font-size: 1.3rem;
  margin: 0px;
}
.swiper-scrollbar {
  margin-top: 10px;
  background: #ddd;
  border-radius: 8px;
  height: 8px;
}
.swiper-scrollbar-drag {
  background: #555; /* Ensures the thumb is visible */
  border-radius: 8px;
  width: 30%; /* Adjust the width as needed */
  height: 100%; /* Ensures thumb height matches the scrollbar track */
}
.swiper-button-prev:after {
  content: "none";
}
.swiper-button-next:after {
  content: "none";
}

</style>
